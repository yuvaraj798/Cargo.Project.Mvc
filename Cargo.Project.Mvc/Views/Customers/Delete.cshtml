@model CustomerViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete the Customers</h1>
<div class="row">
    <div class="col-md-5">
        @*<div asp-validation-summary=""></div>*@
        <ul class="list-group">
            <li class="list-group-item"><b>CustName :</b> @Model.CustName</li>
            <li class="list-group-item"><b>CustAddress :</b>@Model.CustAddress</li>
            <li class="list-group-item"><b>CustPhNo :</b>@Model.CustPhNo</li>
            <li class="list-group-item"><b>CustEmail :</b>@Model.CustEmail</li>
        </ul>
        <div>
            Are sure do you want to delete this customer?
        </div>
        <div>
            <form asp-controller="Customers" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>

        <a asp-controller="Movies" asp-action="Index">Back to List</a>
    </div>
</div>



